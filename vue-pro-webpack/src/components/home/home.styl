//  阴影
 $shaow=0px 16px 16px rgb(229,223,255,0.1);
//  插入背景图
 bg-image($url)
    background-image url($url + "@2x.png")
    @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio:3)
        background-image url($url + "@3x.png")
.homepage{
    // 轮播
    .mint-swipe{
        width: 100%;
        height 2.5rem;
        .mint-swipe-items-wrap{
            position: relative
            width 100%
            height 100%
            .mint-swipe-item{
                 width 100%
                 height 100%
                .banner-link{
                    display: block
                    overflow: hidden
                    width 100%
                    height 100%
                    .banner-pic{
                        display: inline-block
                        width 100%
                        height 2.5rem;
                    }
                }
            }
        }
        .mint-swipe-indicator{
            width: 0.12rem;
            height: 0.12rem;
            margin-right: 0.12rem;
            margin-top 0.1rem;
            opacity: .5
            }
        }
    // 定位
    .loc{
                position: absolute
                width 50px
                height 22px
                border-radius 10px
                top 8px
                left 10px
                padding-left: 5px
                background:rgba(255,255,255,0.2)
                z-index 100000
                i{
                    display: inline-block
                    width 9px
                    height 11px
                    background-size: 9px 11px
                    background-repeat: no-repeat
                    bg-image("../../assets/img/location_")
                    vertical-align: middle;

                }
                span{
                    display: inline-block
                    width 24px
                    height 16px
                    overflow: hidden
                    vertical-align: middle;
                    font-size: 10px
                    color: #fff
                }
            }
    // 导航
    .nav{
            margin: 0.3rem 0.2rem;
            border-radius: 0.4rem;
            background-color: #fff;
            box-shadow:$shaow;
            .nav-wrap{
                display: flex;
                height 2.1rem
                margin-top: 0;
                background-color: #fff;
                border:none;
                border-radius: 0.2rem;
                padding: 0.25rem 0.2rem;
                li{
                    flex: 1;
                    border: none;
                    padding: 0;
                    text-align:center;
                    margin-right: 0.46rem;
                    .nav-link{
                        display: inline-block;
                        width: 1rem;
                        padding: 0;
                        .pic{
                            display: inline-block;
                            width: 1rem;
                            height: 1rem;
                            border-radius: 1rem;
                            margin-bottom: 0.2rem;
                            background-size:1rem 1rem;
                            background-repeat:no-repeat;
                        }
                        .fudao{
                            bg-image("../../assets/img/index_icon_study")
                        }
                        .caiyi{
                            bg-image("../../assets/img/index_icon_interest")
                        }
                        .haoke{
                            bg-image("../../assets/img/index_icon_selling")
                        }
                        .tool{
                            bg-image("../../assets/img/index_icon_tools_big")
                        }
                        .nav-title{
                            margin-top: 0;
                            line-height 10px;
                            font-size: 10px;
                            color: #3b3b3b;
                        }
                    }
                }
                .last-li{
                    margin-right: 0;
                }
            }
        }
    // 广告
    .adv{
        width 100%
        height 1.78rem
        padding-left 0.2rem
        overflow hidden
        ul{
            display: flex
            width 100%
            height 2.2rem
            overflow-x: scroll
            li{
                flex: 0 0 2.38rem
                height 1.78rem
                border-radius: 0.2rem
                margin-right 0.2rem
                overflow: hidden
                .adv-link{
                    display: inline-block
                    .adv-pic{
                        width 2.38rem
                        height 1.78rem
                    }
                }
            }
        }
     }
    //  标题
    .title{
            margin-top: 0.40rem;
            margin-bottom: 0.30rem;
            .title-pic{
                display: inline-block;
                width: 16px;
                height: 16px;
                margin-left: 30px;
                margin: 0 10px;
                background-size:16px 16px;
                background-repeat:no-repeat;
                vertical-align: middle;
            }
            .tit-tuijian{
                bg-image("../../assets/img/index_icon_recommend")
            }
            .tit-tool{
                bg-image("../../assets/img/index_icon_tools")
            }
            .tit-haoke{
                bg-image("../../assets/img/index_icon_sell")
            }
            .text{
                font-size: 15px;
                color: #525252;
                vertical-align: middle;
            }
            a{
                float: right;
                margin-right: 0.2rem;
                padding-left: 0.1rem;
                font-size: 10px;
                color: #525252;
                vertical-align: middle;
                i{
                    display:inline-block;
                    width: 0.22rem;
                    height: 0.22rem;
                    bg-image("../../assets/img/index_icon_more")
                    background-size:0.22rem 0.22rem;
                    background-repeat:no-repeat;
                    vertical-align: middle;
                    }
                }
            }
    .title-haoke{
        margin-top: -0.14rem;
    }
    // 推荐
    .recommended-wrap{

            padding: 0  0.2rem;
            .recommended{
                display: flex;
                width: 100%;
                height: 2rem;
                padding:0.3rem;
                margin-bottom: 0.2rem;
                border-radius: 0.2rem;
                box-shadow:$shaow;
                background:#fff;
                .content-pic{
                    flex:0 0 1.9rem;
                    height: 1.4rem;
                    margin-right: 0.2rem;
                }
                .content-msg{
                    position: relative
                    flex:1;
                    h3{
                        margin-bottom: 0.1rem;
                        font-size:12px;
                        font-weight:900;
                        color:#3b3b3b;
                        white-space:nowrap;
                        overflow:hidden;
                        text-overflow:ellipsis;
                    }
                    p{
                        max-width: 3.5rem
                        font-size:10px;
                        color:#525252;
                        white-space:nowrap;
                        overflow:hidden;
                        text-overflow:ellipsis;
                    }
                    .num{
                        position: absolute;
                        width 100%
                        bottom 0
                        left 0
                        i{
                            display:inline-block;
                            width: 0.2rem;
                            height: 0.2rem;
                            margin-right 0.06rem
                            bg-image('../../assets/img/index_icon_person')
                            background-size:0.2rem 0.2rem;
                            background-repeat:no-repeat;
                            vertical-align: middle;
                        }
                        span{
                            font-size:10px;
                            color:#525252;
                            vertical-align: middle;
                        }
                        .signUp{
                            float: right;
                            width: 1.15rem;
                            height: 0.44rem;
                            border:0.5px solid #35b05d;
                            border-radius: 0.2rem;
                            line-height: 0.44rem;
                            font-size:10px;
                            color:#35b05d;
                            vertical-align: middle;
                            text-align: center;
                        }
                    }

                }
            }
        }
    // 学习工具
    .studytool-wrap{
            width: 100%;
            height: 5rem;
            text-align: center;
            overflow: hidden;
            .content-wrap{
                display: flex;
                width: 100%;
                height 7rem;
                overflow-x: scroll;
                .content{
                    flex: 0 0 2.76rem;
                    height: 4.44rem;
                    background:#fff;
                    border-radius:0.2rem;
                    box-shadow:$shaow;
                    margin-left: 0.2rem;
                    padding-bottom:0.6rem;
                    overflow:hidden;
                    .pic{
                        width: 1.44rem;
                        height: 1.44rem;
                        margin: 0 auto;
                        margin-top: 0.5rem;
                    }
                    .text{
                        margin-top: 0.4rem;
                        margin-bottom: 0.1rem;
                        line-height 12px
                        font-size: 12px;
                        color: #3b3b3b;
                        font-weight: 900;
                        text-align: center;

                    }
                    .text1{
                        margin-bottom:0.5rem;
                        line-height 10px
                        font-size: 10px;
                        color: #525252;
                        text-align: center;
                    }
                    .user{
                        display: inline-block
                        width: 1.6rem;
                        height: 0.5rem;
                        border-radius: 0.5rem
                        line-height 0.5rem
                        background: linear-gradient(#35b05d, #41cc6e);
                        font-size: 10px;
                        color: #fff;
                  }
                }
            }
        }
    // 好课
    .lesson-wrap{
        margin-left:0.2rem;
        // margin-bottom 65px
        overflow: hidden;
        .lesson-box{
            float: left;
            width 2.9rem
            height: 3.16rem;
            margin-bottom 0.2rem
            border-radius:0.2rem;
            margin-right 0.2rem
            background:#fff;
            box-shadow:$shaow;
            overflow:hidden;
            .pic{
                width: 100%;
                height: 2.2rem;
            }
            .msg{
                height 0.84rem
                padding: 0.2rem;
                line-height 12px
                font-size: 12px;
                color: #3b3b3b;
            }
        }
        a:nth-child(2n){
            float: right;
        }
    }
}




