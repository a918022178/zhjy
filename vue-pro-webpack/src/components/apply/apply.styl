                        display:flex;
                        justify-content: space-between;
                        height:1.4rem;
                        background: white;
                        padding: 0 0.3rem 0;
                        height 1.5rem;
                        margin-top: 0.02rem;
                        .sp1{
                            font-size: 13px;
                            line-height: 1.4rem;
                        }
                        .phone{
                        }
                        .sp2{
                            font-size: 15px;
                            font-weight: bold;
                            color: #3b3b3b;
                            vertical-align: middle;
                             line-height: 1.4rem;
                            i{
                                 width: 0.34rem;
                                height: 0.34rem;
                                display: inline-block;
                                border-radius: 50%;
                                vertical-align: middle;
                                margin-left:0.2rem;
                                bg('../../assets/img/zhifuchenggong');
                             }
                        }
                    }
                }
                .next{
                    position: absolute;
                    width 94%;
                    bottom: 0.2rem;
                    height 1.4rem;
                    line-height: 1.4rem;
                    border-radius: 0.2rem;
                    color: white;
                    text-align: center;
                    background: linear-gradient(-90deg,#35b05d, #41cc6e);
                }
            }
