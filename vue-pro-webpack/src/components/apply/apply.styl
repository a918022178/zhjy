	 $shadow=0px 16px 16px rgb(229,223,255,0.1);
     bg($url)
        background url($url + "@2x.png") no-repeat center/cover
        @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio:3)
          background url($url + "@3x.png") no-repeat center/cover;
    body,html{
        height 100%
    }      
    .apply{
       font-family: 'MicroSoft YaHei'
       header a{
                color: white !important;
            }
		header a i{
            font: 700 16px/34px simsun
            }
        .mint-header{
                background: black;
                position: fixed;
                top: 0;
                left:0;
                width: 100%;
                z-index: 13;
            }
            .main{
                height 100%;
                padding 40px  10px 0;
                color: #525252;
                .indent{
                    
                    border-radius 0.3rem;
                    margin-top: 0.2rem;
                    overflow: hidden;
                    box-shadow:$shadow;
                    .top{
                        height:2.3rem;
                        background: white;
                        padding: 0 0.3rem;
                        padding-top: 0.4rem;
                        
                        i{
                          float: left;
                          width 2rem;
                          height 1.5rem;
                          background: url('../../assets/img/baoming-6@2x.png')  no-repeat center/cover;
                          margin-right 0.3rem;
                          }
                          .right1{
                            overflow: hidden;
                            margin-left:0.3rem;
                            margin-top: 0.2rem;
                            span{
                                float:left;
                                width: 0.58rem;
                                height: 0.32rem;
                                bg('../../assets/img/title_free')
                                vertical-align: middle;
                                margin-top: 3px;
                                margin-right 0.1rem;
                             }
                             h4{
                                 font-size: 15px;
                                 font-weight: bold;
                                 color: #3b3b3b;
                              }
                              p{
                                font-size: 13px;
                                margin-top: 0.1rem;
                               }
                              
                          }
                    }
