//  阴影
 $shaow=0px 16px 16px rgb(229,223,255,0.1);
//  插入背景图
 bg-image($url)
    background-image url($url + "@2x.png")
    @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio:3)
        background-image url($url + "@3x.png")
.mine{
    .pic-box{
        position: relative;
        height:2.5rem;
        width:100%;
        background: linear-gradient(#1add63, #0091c1);
        .head-logo{
            display: inline-block;
            position: absolute;
            width:1.78rem;
            height:1.78rem;
            border-radius: 50%;
            border: 0.04rem solid #fff;
            top: 1.47rem;
            left: 50%;
            margin-left: -0.89rem;
            background-image: url("../../assets/img/touxiang_04.png");
            background-repeat: no-repeat;
            background-size: 1.78rem 1.78rem;
            box-shadow: $shaow;
        }
        .set{
            display: inline-block;
            width: 0.4rem;
            height: 0.4rem;
            position: absolute;
            top:0.4rem;
            right:0.4rem;
            background-repeat: no-repeat;
            background-size: 0.4rem 0.4rem;
            bg-image("../../assets/img/set-13");
        }

    }
    .msg{
        padding-top: 1.19rem;
        padding-bottom: 0.36rem;
        background-color: #fff;
        font-size: 15px;
        font-weight: 900;
        color: #3b3b3b;
        text-align: center;
        span{
            vertical-align: middle;
        }
        .msg-icon{
            display:inline-block;
            width: 0.32rem;
            height: 0.32rem;
            margin-left: 0.1rem;
            vertical-align: middle;
            background-repeat: no-repeat;
            background-size: 0.24rem 0.27rem;
            bg-image("../../assets/img/bianji");
        }
    }
    .nav-box{
        padding: 0 0.2rem 1.12rem 0.2rem ;
        .mine-nav{
            margin-top: 0.1rem;
            border-radius: 20px;
            overflow: hidden;
            li{
                width:100%;
                height:1.4rem;
                line-height:1.4rem;
                padding: 0 0.3rem;
                background: #fff;
                border-bottom: 1px solid #ccc;
                a{
                    display: block;
                    width: 100%;
                    height: 100%;
                    line-height:1.4rem;
                    font-size: 14px;
                    font-weight: 900;
                    color: #3b3b3b;
                    .icon-left{
                        width: 0.48rem;
                        height: 0.48rem;
                        margin-left: 0.2rem;
                        margin-top:0.46rem;
                        background-repeat: no-repeat;
                        background-size: 0.34rem 0.4rem;
                    }
                    .discount{
                        bg-image("../../assets/img/kequan")
                    }
                    .order{
                        bg-image("../../assets/img/dingdan")
                    }
                    .hide{
                        bg-image("../../assets/img/shoucang")
                    }
                    .rate{
                        bg-image("../../assets/img/pingjia-")
                    }
                    .icon-right{
                        width: 0.2rem;
                        height: 0.2rem;
                        margin-top: 0.6rem;
                        background-repeat: no-repeat;
                        background-size: 0.13rem 0.2rem;
                        bg-image("../../assets/img/gengduo");

                    }
                }
            }
            li:last-child{
                border-bottom: none;
            }
        }
    }
}